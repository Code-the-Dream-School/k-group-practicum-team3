            </ul>
          </li>
          <!-- These might get merged into one dashboard  -->
          <li>
            <a href="#">Dashboard</a>
          </li>
          <!-- These might get merged into one dashboard  -->
          <li>
            <a href="#">Events</a>
          </li>
          <li>
            <a href="#">Sign out</a>
          </li>
          <li>
            <a href="#">Sign in</a>
          </li>
          <li>
            <a href="#">Create Account</a>
          </li>
          <li>
            <a href="#">Account</a>
          </li>
        </ul>
        
      </nav>

    </header>


    <main class="container mx-auto mt-28 px-5 flex">        
      <%= yield %>
    </main>
  </body>
</html>
