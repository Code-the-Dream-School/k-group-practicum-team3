<div class="max-w-3xl mx-auto bg-white text-gray-900 border border-gray-300 rounded-md shadow-sm">
  <div class="px-6 py-4 border-b border-gray-300">
    <h3 class="text-xl font-semibold">Edit Profile</h3>
  </div>

  <div class="px-6 py-6 space-y-6">

    <%= form_for(resource, as: resource_name,
                 url: registration_path(resource_name),
                 html: { method: :put, multipart: true }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Profile Picture -->
      <div>
        <%= f.label :profile_picture, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.file_field :profile_picture, class: "block w-full text-sm" %>

        <% if resource.profile_picture.attached? %>
          <div class="mt-3">
            <%= image_tag resource.profile_picture.variant(resize_to_limit: [120,120]),
                class: "rounded-full border border-gray-300" %>
          </div>
        <% end %>
      </div>

      <!-- FIRST / LAST -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= f.label :first_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :first_name,
              class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm" %>
        </div>

        <div>
          <%= f.label :last_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :last_name,
              class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm" %>
        </div>
      </div>

      <!-- AGE / GENDER -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= f.label :age, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :age,
              class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm" %>
        </div>

        <div>
          <%= f.label :gender, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :gender,
              User.genders.keys.map { |g| [g.humanize, g] },
              { include_blank: true },
              class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm" %>
        </div>
      </div>

      <!-- LOCATION -->
      <div>
        <%= f.label :city, "Location (City)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :city,
            class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm" %>
      </div>

      <!-- BIO -->
      <div>
        <%= f.label :bio, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :bio,
            rows: 3,
            class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm" %>
      </div>

      <!-- SECURITY -->
      <div class="pt-4">
        <p class="text-sm text-gray-500 mb-3">
          Leave blank if you don&#39;t want to change your password.
        </p>

        <div class="space-y-3">
          <div>
            <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.password_field :password,
                class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm" %>
          </div>

          <div>
            <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.password_field :password_confirmation,
                class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm" %>
          </div>

          <div>
            <%= f.label :current_password,
                "Current password (required to save changes)",
                class: "block text-sm font-medium text-gray-700 mb-1" %>

            <%= f.password_field :current_password,
                class: "w-full border border-gray-300 rounded-md px-3 py-2 text-sm" %>
          </div>
        </div>
      </div>

      <div class="mt-6 flex space-x-4">
        <%= link_to "Cancel", user_path(current_user),
          class: "px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700 text-sm" %>

        <%= f.submit "Update",
          class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 text-sm" %>
      </div>


    <% end %>
  </div>
</div>
