<div class="max-w-md mx-auto mt-12 bg-white text-gray-900 border border-gray-300 rounded-md shadow-sm">

  <!-- Header -->
  <div class="px-6 py-4 border-b border-gray-300">
    <h2 class="text-2xl font-semibold">Welcome back</h2>
    <p class="text-sm text-gray-600 mt-1">
      Log in to continue
    </p>
  </div>

  <div class="px-6 py-6 space-y-6">

    <!-- ERROR MESSAGE -->
    <% if flash[:alert] %>
      <div class="text-sm text-red-600">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_for(resource,
        as: resource_name,
        url: session_path(resource_name),
        html: { data: { turbo: false } }) do |f| %>

      <!-- EMAIL -->
      <div>
        <%= f.label :email,
            class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            class: "w-full rounded-md px-3 py-2 text-sm border
              #{flash[:alert] ? 'border-red-500' : 'border-gray-300'}" %>
      </div>

      <!-- PASSWORD -->
      <div>
        <%= f.label :password,
            class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password,
            autocomplete: "current-password",
            class: "w-full rounded-md px-3 py-2 text-sm border
              #{flash[:alert] ? 'border-red-500' : 'border-gray-300'}" %>
      </div>

      <!-- REMEMBER + FORGOT -->
      <div class="flex items-center justify-between text-sm">
        <% if devise_mapping.rememberable? %>
          <label class="flex items-center gap-2 text-gray-700">
            <%= f.check_box :remember_me,
                class: "rounded border-gray-300" %>
            Remember me
          </label>
        <% end %>

        <%= link_to "Forgot password?",
            new_user_password_path,
            class: "text-blue-600 hover:underline" %>
      </div>

      <!-- ACTION -->
      <div class="pt-2">
        <%= f.submit "Log in",
            class: "w-full px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 text-sm font-medium" %>
      </div>

    <% end %>

    <!-- FOOTER -->
    <div class="border-t border-gray-200 pt-4 text-center text-sm text-gray-600">
      Donâ€™t have an account?
      <%= link_to "Sign up",
          new_user_registration_path,
          class: "text-blue-600 hover:underline font-medium" %>
    </div>

  </div>
</div>
